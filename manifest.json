{
    "author": "Eyuel Tessema <eyueltessema@gmail.com>",
    "manifest_version": 2,
    "name": "remuncher",
    "version": "0.1",
    "description": "This extension gives you reminders to put in your Munchery order.",
    //"icons": {
        //"128": "icon_128.png"
    //},
    "browser_action": {
        //"default_icon": "icon.png"
    },
    "background": {
        "persistent": false,
        "scripts": ["background.js"]
    },
    "content_scripts": [{
        "matches": ["https://munchery.com/checkout/*"],
        "js": ["content_script.js"]
    }],
    "permissions": [
        "alarms",
        "storage"
    ],
    "minimum_chrome_version": "22"
}
